<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="Referee"
	package="src.referee">

	<imports>
		<import>referee.beliefs.*</import>
		<import>referee.plans.*</import>
		<import>jadex.runtime.*</import>
		<import>jadex.planlib.*</import>
		<import>jadex.util.*</import>
		<import>jadex.adapter.fipa.*</import>
		<import>java.util.logging.*</import>
		<import>java.util.*</import>
	</imports>
	
	<capabilities>
		<capability name="dfcap" file="jadex.planlib.DF"/>
	</capabilities>

	<beliefs>
		<belief name="agresivo" class="int"/>
		<belief name="pasivo" class="int"/>
		<belief name="wtf" class="int"/>
	</beliefs>

	<goals>
		<achievegoalref name="df_search">
			<concrete ref="dfcap.df_search"/>
		</achievegoalref>
		<performgoal name="completar_jugadores" recur="true" recurdelay="2000">
			<contextcondition>$beliefbase.agresivo &lt; 6</contextcondition>
		</performgoal>
		<achievegoal name="comienza_partido">
			<creationcondition>
				$beliefbase.agresivo > 6
			</creationcondition> 
		</achievegoal>
	</goals>
		
	<plans>
		<plan name="CompletarJugadoresPlan">
			<body class="CompletarJugadoresPlan" />
			<trigger> <goal ref="completar_jugadores"/> </trigger>
		</plan>
		<plan name="comienza_partido_plan">
			<body class="ComienzaPartidoPlan" />
			<trigger><goal ref="comienza_partido"/></trigger>
		</plan>
	</plans>
		
	<configurations>
		<configuration name="default">
		<beliefs>
			<initialbelief ref="agresivo">
				<fact>0</fact>
			</initialbelief>
			<initialbelief ref="pasivo">
				<fact>0</fact>
			</initialbelief>
			<initialbelief ref="wtf">
				<fact>0</fact>
			</initialbelief>
		</beliefs>
		<goals>
			<initialgoal ref="completar_jugadores"></initialgoal>
		</goals>

		</configuration>
	</configurations>
	
</agent>

