<agent xmlns="http://jadex.sourceforge.net/jadex" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://jadex.sourceforge.net/jadex http://jadex.sourceforge.net/jadex-0.96.xsd"
       name="num_jugadores" package="src.config">
    <imports>
        <import>jadex.runtime.*</import>
        <import>jadex.planlib.*</import>
        <import>jadex.util.*</import>
        <import>jadex.adapter.fipa.*</import>
        <import>java.util.logging.*</import>
        <import>java.util.*</import>
        <import>config.plans.*</import>
    </imports>
    <capabilities>
        <capability name="dfcap" file="jadex.planlib.DF"/>
    </capabilities>

    <beliefs>
        <belief name="aumentar_jugadores" class="boolean"/>
        <belief name="decrementar_jugadores" class="boolean"/>
    </beliefs>

    <goals>
        <achievegoalref name="df_register">
            <concrete ref="dfcap.df_register"/>
        </achievegoalref>
        <performgoal name="aumentar_jugadores" recur="true">
            <contextcondition>$beliefbase.aumentar_jugadores == true</contextcondition>
        </performgoal>
    </goals>

    <plans>
        <plan name="AumentarJugadoresPlan">
            <body class="AumentarJugadoresPlan" />
            <trigger> <goal ref="aumentar_jugadores"/> </trigger>
        </plan>
    </plans>

    <configurations>
        <configuration name="aumentar_jugadores">
            <beliefs>
                <initialbelief ref="aumentar_jugadores">
                    <fact>true</fact>
                </initialbelief>
            </beliefs>
        </configuration>
    </configurations>
</agent>